# Staging Environment Variables for Vercel Preview
# Use for testing before production

# Required - Core Configuration
NODE_ENV=production
NEXT_PUBLIC_URL=https://staging-your-domain.vercel.app

# Required - LLM Providers (can use same as production or separate)
ANTHROPIC_API_KEY=your_staging_anthropic_key
CLAUDE_API_MODEL=claude-3-5-sonnet-20240620
OPENAI_API_KEY=your_staging_openai_key
OPENAI_FALLBACK_MODEL=gpt-4o-mini

# Provider Configuration
PRIMARY_PROVIDER=anthropic
FALLBACK_PROVIDER=openai
FALLBACK_ENABLED=true

# Feature Flags - Staging (Test new features)
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_CALENDAR_INGEST=false
FEATURE_ANALYTICS=false
FAQ_ENABLED=true
ALONSO_PERSONA_ENABLED=true

# Rate Limiting - Staging (More lenient for testing)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=30
RATE_LIMIT_WINDOW_MS=60000

# Cache Configuration
RESPONSE_CACHE_ENABLED=true
RESPONSE_CACHE_TTL=180
FAQ_MIN_SCORE=0.68
FAQ_RETURN_TOP=2
FAQ_SHOW_BADGE=true

# Email Configuration - Staging (Dry run mode)
EMAIL_PROVIDER=smtp
EMAIL_FROM="Coral Beach Staging <staging@coralbeach.bm>"
RECEPTION_EMAILS="test@example.com"
EMAIL_DRY_RUN=true
EMAIL_SUBJECT_PREFIX="[STAGING] "

# SMTP Configuration (for testing)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your_mailtrap_user
SMTP_PASS=your_mailtrap_pass

# Security - Staging
ALLOWED_ORIGINS=https://staging-your-domain.vercel.app,http://localhost:3000
CORS_ENABLED=true
LOG_LEVEL=debug
PII_MASKING=true

# Performance - Staging
MAX_REQUEST_SIZE=2mb
REQUEST_TIMEOUT=60000
WEATHER_CACHE_TTL=120
TIME_CACHE_TTL=30

# Debug Settings
DEBUG_MODE=true
VERBOSE_LOGGING=true

# Testing
TEST_MODE=true
MOCK_WEATHER=false
MOCK_TIME=false