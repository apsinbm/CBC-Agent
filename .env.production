# Production Environment Variables for Vercel
# Copy this to Vercel Environment Variables

# Required - Core Configuration
NODE_ENV=production
NEXT_PUBLIC_URL=https://your-domain.vercel.app

# Required - LLM Providers
ANTHROPIC_API_KEY=your_production_anthropic_key
CLAUDE_API_MODEL=claude-3-5-sonnet-20240620
OPENAI_API_KEY=your_production_openai_key
OPENAI_FALLBACK_MODEL=gpt-4o-mini

# Provider Configuration
PRIMARY_PROVIDER=anthropic
FALLBACK_PROVIDER=openai
FALLBACK_ENABLED=true

# Feature Flags - Production Settings
FEATURE_EMAIL_NOTIFICATIONS=false
FEATURE_CALENDAR_INGEST=false
FEATURE_ANALYTICS=false
FAQ_ENABLED=true
ALONSO_PERSONA_ENABLED=true

# Rate Limiting - Production (Stricter)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=10
RATE_LIMIT_WINDOW_MS=60000

# Cache Configuration
RESPONSE_CACHE_ENABLED=true
RESPONSE_CACHE_TTL=300
FAQ_MIN_SCORE=0.65
FAQ_RETURN_TOP=1
FAQ_SHOW_BADGE=false

# Email Configuration (when enabled)
EMAIL_PROVIDER=sendgrid
EMAIL_FROM="Coral Beach Reception <reception@coralbeach.bm>"
RECEPTION_EMAILS="reception@coralbeach.bm"
EMAIL_DRY_RUN=true
EMAIL_SUBJECT_PREFIX="[CBC Concierge] "

# SendGrid (if using)
SENDGRID_API_KEY=your_production_sendgrid_key

# Security
ALLOWED_ORIGINS=https://your-domain.vercel.app,https://coralbeach.bm
CORS_ENABLED=true
LOG_LEVEL=error
PII_MASKING=true

# Performance
MAX_REQUEST_SIZE=1mb
REQUEST_TIMEOUT=30000
WEATHER_CACHE_TTL=300
TIME_CACHE_TTL=60

# Monitoring (optional)
SENTRY_DSN=
LOGTAIL_TOKEN=